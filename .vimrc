set background=dark
colorscheme solarized

set number
set laststatus=2

set autoindent
set tabstop=2
set shiftwidth=2
set softtabstop=2
set backspace=eol,start,indent
set expandtab

set nowrap

set showmatch
set hlsearch

set encoding=utf8
set ffs=unix,mac,dos

set nobackup
set nowb
set noswapfile

syntax on
filetype detect
filetype plugin on
filetype indent on
